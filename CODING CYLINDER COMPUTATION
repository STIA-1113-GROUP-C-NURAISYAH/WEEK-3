package numericalData;

public class CylinderComputation {

	public static void main(String[] args) {
		// TODO Auto-generated method stub

		double radius=1.2;
		double height=8;
		final double PI= 3.14159265;
		double surfaceArea=(2*PI*radius*height)+(2*PI*radius*radius);
		double baseArea=PI*radius*radius;
		double volume=PI*radius*radius*height;
		
		System.out.printf ("The surface area is %.2f" , surfaceArea);
		System.out.println();
		System.out.printf ("The base area is %.2f" , baseArea);
		System.out.println();
		System.out.printf ("The volume is %.2f" , volume);
	}

}
